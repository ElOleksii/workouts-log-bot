generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Workout {
  id Int @id @default(autoincrement())
  userId Int @map("user_id")  
  startTime DateTime? @map("start_time")
  endTime DateTime? @map("end_time")
  isFinished Boolean @map("is_finished") @default(false)
  createdAt DateTime @map("created_at") @default(now())

  exercises Exercise[] 
  sourceTemplateId Int?
  sourceTemplate Template? @relation(fields: [sourceTemplateId], references: [id])
  

  @@map("workouts")
  
} 

model Exercise {
  id Int @id @default(autoincrement())
  workoutId Int @map("workout_id")
  name String

  workout Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  sets Set[] 

  @@map("exercises")
}

model Set {
  id Int @id @default(autoincrement())
  exerciseId Int @map("exercise_id")
  reps Int
  weight Int
  
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@map("sets")
}

model Template {
  id Int @id @default(autoincrement())
  userId Int @map("user_id")
  name String
  createdAt DateTime @map("created_at") @default(now())

  exercises TemplateExercise[]
  workout Workout[]

  @@map("templates")
}

model TemplateExercise {
  id Int @id @default(autoincrement())
  templateId Int @map("template_id")
  name String

  template Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  sets TemplateSet[]

  @@map("template_exercises")
}

model TemplateSet {
  id Int @id @default(autoincrement())
  templateExerciseId Int @map("template_exercise_id")
  reps Int
  weight Int

  exercise TemplateExercise @relation(fields: [templateExerciseId], references: [id], onDelete: Cascade)

  @@map("template_sets")
}