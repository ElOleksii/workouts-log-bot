generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Workout {
  id Int @id @default(autoincrement())
  userId Int @map("user_id")  
  startTime DateTime? @map("start_time")
  endTime DateTime? @map("end_time")
  isFinished Boolean @map("is_finished") @default(false)
  createdAt DateTime @map("created_at") @default(now())

  templateId Int? @map("template_id")
  template WorkoutTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  
  exercises Exercise[] 

  @@map("workouts")
  

} 

model Exercise {
  id Int @id @default(autoincrement())
  workoutId Int @map("workout_id")
  name String

  workout Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  sets Set[] 

  @@map("exercises")
}

model Set {
  id Int @id @default(autoincrement())
  exerciseId Int @map("exercise_id")
  reps Float
  weight Float
  
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@map("sets")
}

model WorkoutTemplate {
  id Int @id @default(autoincrement())
  userId Int @map("user_id")
  name String 
  createdAt DateTime @map("created_at") @default(now())

  exercises ExerciseTemplate[]
  workouts Workout[]

  @@map("workout_template")  
}

model ExerciseTemplate {
  id Int @id @default(autoincrement())
  templateWorkoutId Int @map("template_workout_id")
  name String
  order Int @default(0)

  template WorkoutTemplate @relation(fields: [templateWorkoutId], references: [id], onDelete: Cascade)
  templateSets SetTemplate[] 

  @@map("exercise_template")
}

model SetTemplate {
  id Int @id @default(autoincrement())
  templateExerciseId Int @map("template_exercise_id")
  reps Float?
  weight Float?

  exercise ExerciseTemplate @relation(fields: [templateExerciseId], references: [id], onDelete: Cascade)
  @@map("set_template")
}